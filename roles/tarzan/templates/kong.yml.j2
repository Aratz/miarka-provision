_format_version: "2.1"
_transform: true

services:
  - name: arteria_checksum
    host: localhost
    port: 10420
    protocol: http
    routes:
    - paths:
      - /arteria_checksum
      strip_path: true

  - name: arteria_delivery
    host: localhost
    port: 10440
    protocol: http
    routes:
    - paths:
      - /arteria_delivery
      strip_path: true

  - name: arteria_archive
    host: localhost
    port: 10480
    protocol: http
    routes:
    - paths:
      - /arteria_archive
      strip_path: true

plugins:
  - name: key-auth
    config:
      key_names:
      - apikey
      key_in_body: false
      key_in_header: false
      key_in_query: true

consumers:
- username: arteria
  keyauth_credentials:
    - key: {{ tarzan_api_key }}
